<div class="container-fluid justify-content-between align-items-center">
  <div class="d-flex row row-cols-1 me-1">
    {{#each posts as |post|}}
      <div class="col bg-dark m-2">
        <div class="d-flex justify-content-between">
          <h4 class="text-white pt-1">{{post.title}}</h4>
          <p class="text-white pt-1">Posted by {{post.user.username}}</p>
        </div>
        <div class="bg-light mb-2 p-1 ps-2">
          <p>{{post.content}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>